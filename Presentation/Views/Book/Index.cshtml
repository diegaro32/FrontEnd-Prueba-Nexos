@model List<Book>
@{
    ViewData["Title"] = "Lista de Libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Lista de Libros</h1>

<div class="card">
    <div class="card-body">

        <a asp-action="Book" asp-controller="Book" asp-route-idBook="0" class="btn btn-success btn-sm">Nuevo Libro</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Año</th>
                    <th>Numero de Páginas</th>
                    <th>Autor</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Year</td>
                        <td>@item.NumberOfPages</td>
                        <td>@item.AutorName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


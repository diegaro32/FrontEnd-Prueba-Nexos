@model List<Autor>
@{
    ViewData["Title"] = "Lista de Autores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Lista de Autores</h1>

<div class="card">
    <div class="card-body">

        <a asp-action="Autor" asp-controller="Autor" asp-route-idAutor="0" class="btn btn-success btn-sm">Nuevo Autor</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Ciudad</th>
                    <th>Correo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.BirthDate</td>
                        <td>@item.CityName</td>
                        <td>@item.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>